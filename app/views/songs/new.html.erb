<div class="modal" id="new-song-dialog" ng-controller="NewSongCtrl">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-disabled="saving">&times;</button>
        <h1>New Song</h1>
      </div>
      <form ng-model="newSong" ng-submit="addSong(newSong)">
        <div class="modal-body">
            <div class="row">
              <div class="col-xs-12 col-sm-6 col-md-4">
                <span>Name</span>
                <input type="text" class="form-control" ng-model="newSong.name">
              </div>
              
              <div class="col-xs-12 col-sm-6 col-md-4">
                <span>Author</span>
                <input type="text" class="form-control" ng-model="newSong.author">
              </div>

              <div class="col-xs-12 col-sm-6 col-md-4">
                <span>Album</span>
                <input type="text" class="form-control" ng-model="newSong.album">
              </div>

              <div class="col-xs-12 col-sm-6 col-md-12">
                <span>URL</span>
                <input type="text" class="form-control" ng-model="newSong.remote_url">
              </div>

            </div>
        </div>

        <div class="modal-footer">
          <button role="submit" class="btn btn-primary">Add song</button>
        </div>
      </form>

    </div>
  </div>
</div>