<p id="notice"><%= notice %></p>

<div ng-controller="SongsCtrl" volume-scroll>
  <h1>Listing Songs</h1>
  <h2>{{volume}}</h2>
  <!-- {{test}} -->
<!--   <audio controls="controls" autobuffer="autobuffer" autoplay="autoplay" id='lol'>
  </audio>
 -->  {{currentSong.audio.readyState}}
  <div class="col-md-6">
    <div class="list-group" >
      <div ng-repeat="song in songs">
        <a class="nounderline" ng-show="song.paused" ng-click="play(song)">
          <i class="glyphicon glyphicon-play" ></i>
        </a>
        <a class="nounderline" ng-hide="song.paused" ng-click="pause(song)">
          <i class="glyphicon glyphicon-pause" ></i>
        </a>
        {{song.author}}
        <strong>{{song.name}}</strong>
        <br>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <span class="glyphicon glyphicon-volume-up"></span>
    <input type="range" ng-show="currentSong" ng-model="volume" class="volume-bar form-control" max="100">
    <!-- <div ng-hide="song.audio.paused" role="progressbar" aria-valuemin="0" aria-valuemax="100" valuenow="60" class="progress progress-striped active">
      <div class="progress-bar"></div>
    </div> -->
    <input class='form-control' progress-bar type=range min=0 max=1 step=0.001 ng-model="currentSong.progress">
    <!-- <input progress-bar class="custom-progress-bar" type="range"> -->
  </div>
</div>
<br>

<button class="btn btn-primary" data-toggle="modal" data-target="#new-song-dialog">Add song</button>
<div ng-include="'/templates/songs:new'"></div>